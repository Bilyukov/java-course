
public class SearchingInStrings {

	public static void main(String[] args) {
		
		//Index of
		String javaLang = "Къде се намира Java? Има ли въобще Java в изречението?";
		
		int javaIndex = javaLang.indexOf("Java");
		
		System.out.format("Думата Java се намира на %d индекс \n", javaIndex);
		
		int secondJavaIndex = javaLang.indexOf("Java", 16);
		
		System.out.format("Думата Java се намира и на %d индекс", secondJavaIndex);
		
		//starts with
		
		String example = "Java Programming";
		
		bool startsWith = example.startsWith("Java")

	}

}
