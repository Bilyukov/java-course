
public class TimeSpan {
	
	private static final int HOURS_PER_DAY = 24; 
	
	private int days;
	
	public TimeSpan(){
		this.days = 0;
	}
	
	public TimeSpan(int days){
		this();
		
		setDays(days);
	}

	public int getDays() {
		return days;
	}

	public void setDays(int days) {
		if(days >= 0){
			this.days = days;
		}
	}
}
