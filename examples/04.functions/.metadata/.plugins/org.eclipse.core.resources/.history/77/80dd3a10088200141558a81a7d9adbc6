
public class Recursion {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public static long fibonacci(long number) {
	    if ((number == 0) || (number == 1)) {
	      return number;
	    }
	    else {
	      // recursion step
	      return fibonacci(number - 1) + fibonacci(number - 2);
	    }
	  }

}
